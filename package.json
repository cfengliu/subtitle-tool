{
  "name": "subtitles-tool",
  "private": true,
  "workspaces": [
    "frontend",
    "api"
  ],
  "scripts": {
    "build:fe": "npm --workspace frontend run build",
    "build:api": "cd api && pip install -r requirements.txt",
    "build:all": "npm run build:fe && npm run build:api",
    "dev:fe": "npm --workspace frontend run dev",
    "dev:api": "uvicorn api.src.whisper_api:app --host 0.0.0.0 --port 8010 --reload",
    "dev:all": "concurrently \"npm run dev:fe\" \"npm run dev:api\"",
    "start:fe": "npm --workspace frontend run start",
    "start:api": "cd api && uvicorn src.whisper_api:app --host 0.0.0.0 --port 8000",
    "start:all": "concurrently \"npm run start:fe\" \"npm run start:api\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.515.0",
    "tailwind-merge": "^3.3.1"
  }
}
